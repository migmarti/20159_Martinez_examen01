<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mmart.banpatito.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:id="@+id/textCustomer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editName"
        android:layout_below="@+id/textCustomer"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonClear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operations"
        android:id="@+id/textOperations"
        android:layout_below="@+id/editName"
        android:layout_alignParentStart="true" />

    <EditText
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editOperations"
        android:layout_below="@+id/textOperations"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD COSTUMER"
        android:id="@+id/buttonAdd"
        android:layout_below="@+id/editDate"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE QUEUE"
        android:id="@+id/buttonQueue"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/listViewCustomer"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewCustomer"
        android:layout_alignParentStart="true"
        android:choiceMode="none"
        android:layout_above="@+id/buttonQueue"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttonClear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR DATABASE"
        android:id="@+id/buttonClear"
        android:layout_below="@+id/editDate"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date "
        android:id="@+id/labelDate"
        android:layout_below="@+id/editOperations"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editDate"
        android:layout_below="@+id/labelDate"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonClear" />

</RelativeLayout>
